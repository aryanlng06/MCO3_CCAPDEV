    <div class="popup">
      <div class="form-container">
        <h2>Make a review!</h2>
        <form name="post-form" onsubmit="return checkPost()" action="/postReview" method="post">
          <div class="form-group">
            <label for="restaurant">Restaurant Name:</label>
        <select class="restaurantName" name="restaurantName" required>
          <option value="">Select restaurant...</option>
          {{#each kitchen}}
          <option value="{{restaurantName}}">{{restaurantName}}</option>
          {{/each}}
          <!-- Add more options as needed -->
        </select>
          </div>
          <div class="form-group">
            <label for="location">Location:</label>
            <input type="text" class="location" name="location" required>
          </div>
          <div class="form-group">
            <label for="rate">Rating: 1(lowest) to 5(highest)</label>
            <select class="rating" name="rating" required>
              <option value="">Select rating...</option>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
            </select>
          </div>
          <div class="form-group">
            <label for="comments">Comments:</label>
            <textarea class="description" name="description" rows="8" required></textarea>
          </div>
          <input type="submit" value="Submit" id="submit">
          <button type="button" class="close">Close</button>
        </form>
      </div>
    </div>