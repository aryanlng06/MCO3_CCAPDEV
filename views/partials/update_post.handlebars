<div class="popup_update" id="update-review-popup">
  <div class="form-container">
    <h2>Update Review</h2>
    <form name="update-review-form" action="/updatePost" method="post">
            <input type="hidden" name="postId" class="post-id" id="update-post-id">
      <div class="form-group">
        <label for="rate">New Rating: 1 (lowest) to 5 (highest)</label>
        <select class="rating" name="rating" required>
          <option value="">Select new rating...</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
        </select>
      </div>
      <div class="form-group">
        <label for="description">New Description:</label>
        <textarea class="description" name="description" rows="8" required></textarea>
      </div>
      <input type="submit" value="Update">
      <button type="button" class="close">Close</button>
    </form>
  </div>
</div>