<div class="popup" id="update-profile-popup">
  <div class="form-container">
    <h2>Update Profile</h2>
    <form name="update-profile-form"  action="/updateProfile" method="post">
    <input type="hidden" name="userId" class="user-id" id="update-user-id">
      <div class="form-group">
        <label for="Username">Username:</label>
        <input type="text" class="username" name="username" required>
      </div>
      <div class="form-group">
        <label for="email">Email:</label>
        <input type="text" class="email" name="email" required>
      </div>
      <div class="form-group">
        <label for="imageSrc">Profile Picture URL:</label>
        <input type="text" class="imageSrc" name="imageSrc" required>
      </div>
      <div class="form-group">
        <label for="bio">Bio:</label>
        <textarea class="bio" name="bio" rows="8" required></textarea>
      </div>
      <input type="submit" value="Save">
      <button type="button" class="close">Close</button>
    </form>
  </div>
</div>